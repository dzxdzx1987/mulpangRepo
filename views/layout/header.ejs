<header id="header">
	<hgroup>
		<h1 class="logo">
			<a href="/"><img src="image/svg/logo.svg" alt="mulPang"></a>
		</h1>
		<h2 class="theme">
			<img src="image/svg/logo_text.svg" alt="오늘은 뭘 파니?">
		</h2>
	</hgroup>
	<nav id="nav">
		<h1 class="blind">메인메뉴</h1>
		<ul>
			<li class="today"><a href="today.html">오늘</a></li>
			<li class="near"><a href="location.html">근처</a></li>
			<li class="best"><a href="best.html">추천</a></li>
			<li class="all"><a href="all.html">모두</a></li>
			<li><a href="bbs.html">게시판</a></li>
		</ul>
	</nav>
	<div id="member_info">
		<!-- 회원정보/로그인 화면 출력 영역 -->
		<% if(uid){ %>
			<h1 class="blind">회원정보</h1>
			<img src="image/member/<%= img %>" class="user_profile" alt="<%= uid %> 회원 이미지">
			<% if(auth == 0){ %>
				<a href="adminpage.html" class="go_mypage">관리자 페이지로</a>
			<% } %>
			<a href="mypage.html" class="go_mypage">마이 페이지로</a>
			<a href="logout" class="logout">로그아웃</a>
		<% }else{ %>
			<h1 class="blind">로그인</h1>
			<form id="login" name="login_form" action="#" method="post">
				<label for="login_id">아이디</label>
				<input type="email" id="login_id" name="_id" required placeholder="등록된 e-mail 입력">
				<label for="login_password">비밀번호</label>
				<input type="password" id="login_password" name="password" required placeholder="비밀번호 입력">
				<input type="submit" value="로그인">
			</form>
			<a href="join.html" class="member_join">회원가입</a>
		<% } %>
	</div>
	<div id="cart" class="carton">
		<h2 class="interest">관심쿠폰</h2>
		<p class="interest_cnt">0</p>
		<ul>
			<!-- 관심 쿠폰 출력 영역 -->
		</ul>
	</div>
</header>
